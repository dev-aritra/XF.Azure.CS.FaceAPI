<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Azure.CS.FaceAPI.View.LandingPage"
             Title="Home">
    <ContentPage.Content>
        <StackLayout
        VerticalOptions="Center">
            <Button
                TextColor="Black"
                Margin="10,10,10,10"
                BackgroundColor="Aquamarine"
                Text="Capture image"
                Clicked="CaptureImage">
            </Button>
            <Button
                TextColor="Black"
                Margin="10,10,10,10"
                BackgroundColor="Aquamarine"
                Text="Select from gallery"
                Clicked="SelectFromGallery">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>