<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XF.Azure.CS.FaceAPI.View.LandingPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Button
                Margin="10,10,10,10"
                BackgroundColor="Aquamarine"
                Clicked="CaptureImage"
                Text="Capture image"
                TextColor="Black" />
            <Button
                Margin="10,10,10,10"
                BackgroundColor="Aquamarine"
                Clicked="SelectFromGallery"
                Text="Select from gallery"
                TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>